<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiApp.Views.Departamento_ventasListPage">
    <StackLayout>
        <Button Text="Agregar Departamento venta" Clicked="OnAddProductClicked"/>
        <ListView x:Name="Departamentos_ventasListView" ItemTapped="OnProductTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Nombre}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
