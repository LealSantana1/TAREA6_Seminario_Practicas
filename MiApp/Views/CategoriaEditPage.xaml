<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiApp.Views.CategoriaEditPage">
    <StackLayout Padding="10">
        <Label Text="Nombre de Categoria"/>
        <Entry x:Name="NombreEntry"/>

        <Label Text="Agrega Descripcion"/>
        <Entry x:Name="DescriptionEntry"/>

        <Label Text="Departamento Venta"/>
        <Picker x:Name="Departamento_ventaPicker"/>

        <Button Text="Actualizar" Clicked="OnSaveClicked" BackgroundColor="Aqua"/>
        <Button Text="Borrar" Clicked="OnDeleteClicked" BackgroundColor="Aqua"/>
        <Button Text="Guardar" Clicked="OnSaveClicked" BackgroundColor="Chocolate"/>
    </StackLayout>
</ContentPage>